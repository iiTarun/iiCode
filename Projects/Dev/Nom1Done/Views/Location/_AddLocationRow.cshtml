   new { value = "1" , text = "R"  },
   new { value = "2" , text = "D" },
   new { value = "3" , text = "B" },
                                }, "value", "text", Model.LocationsList[0].RDUsageID), new { @class = "form-control width: -webkit-fill-available;", @rel = CurrentRowId})

    </td>
