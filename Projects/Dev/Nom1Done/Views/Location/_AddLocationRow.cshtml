    <td>@Html.TextBox("LocationsList[" + CurrentRowId + "].Name", Model.LocationsList[0].Name, new { @class = "form-control", @rel = CurrentRowId })</td>
    <td>@Html.TextBox("LocationsList[" + CurrentRowId + "].Identifier", Model.LocationsList[0].Identifier, new { @class = "form-control", @rel = CurrentRowId })</td>
    <td>@Html.TextBox("LocationsList[" + CurrentRowId + "].PropCode", Model.LocationsList[0].PropCode, new { @class = "form-control", @rel = CurrentRowId })</td>
    <td>@Html.DropDownList("LocationsList[" + CurrentRowId + "].RDUsageID", new SelectList(
