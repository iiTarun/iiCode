@model Nom.ViewModel.NominationPartialDTO


<div class="modal-dialog modal-lg">
    <div class="modal-content animated fadeIn">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Select Locations</h4>
        </div>
        <div class="modal-body">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>No of Locations: @Model.Locations.Count</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover" id="locationModalTable">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Name</th>
                                <th>Id</th>
                                <th>PropCode</th>
                                <th>R-D-Bversion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Locations)
                            {
                                <tr class="gradeX">
                                    <td><button type="button" style="background-color:#FF6C3A !important; border-color:#FF6C3A !important;" onclick="CntrLocationPopUpSelect('@item.Name','@item.ID','@item.PropCode','@Model.ForRow','@Model.PopUpFor')" class="btn btn-primary">Select</button></td>
                                    <td>@item.Name</td>
                                    <td>
                                        @item.Identifier
                                    </td>
                                    <td>@item.PropCode</td>
                                    <td class="center">@item.RDB</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#locationModalTable').DataTable();
    })
</script>

