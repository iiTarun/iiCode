                                var classNameFooter = "Ddates" + DateVal;
                                @*<td class="sum @classNameFooter"></td>*@//TODO: For Rec QTY
                                <td class="sum @classNameFooter"></td>//TODO: For Del QTY
                                DateVal = DateVal + 1;
                            }

