                        @{
                            //DateVal = DateVal + 1;
                            var ClassNameFooterTotal = "Ddates" + DateVal;
                        }
                        <td class="sum @ClassNameFooterTotal"></td>

                    </tr>
                </tfoot>
            </table>

            @*</div>*@
