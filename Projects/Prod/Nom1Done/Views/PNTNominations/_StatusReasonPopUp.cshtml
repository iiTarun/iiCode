@model Nom.ViewModel.NominationPartialDTO
@{
    var index = 1;
}

<div class="modal-dialog modal-lg">
    <div class="modal-content animated fadeIn">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Reasons</h4>
        </div>
        <div class="modal-body">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>No of Reasons: @Model.StatusReason.Count</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover" id="StatusReportModalTable">
                        <thead>
                            <tr>
                                <th>NAESB Code Value</th>
                                <th>Code Description</th>
                                <th>Nom TrackingId</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.StatusReason)
                            {
                            <tr class="gradeX">
                                <td>@item.ValidationCode</td>
                                <td>@item.ValidationMessage</td>
                                <td>@item.NomTrackingId</td>
                            </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal"  style="background-color:#FF6C3A !important; border-color:#FF6C3A !important;" onclick="statusReasonBtnClick()">Close</button>
        </div>
    </div>
</div>

